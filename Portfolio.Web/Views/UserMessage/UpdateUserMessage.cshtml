@model UserMessage
@{
    ViewData["Title"] = "Mesajlar Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="UserMessageId" />

    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    <div class="form-group">
        <label>Konu</label>
        <input type="text" class="form-control" asp-for="Subject" />
    </div>

    <div class="form-group">
        <label>Mesaj</label>
        <input type="text" class="form-control" asp-for="MessageBody" />
    </div>

    <div class="form-group">
        <label>Durum</label>
        <input type="text" class="form-control" asp-for="IsRead" />
    </div>

    <button class="btn btn-outline-primary">Güncelle</button>

</form>