@model User
@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h4 class="page-title">Şifre ve Bilgi Güncelleme İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <form method="post">

            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label for="Name">Adınız</label>
                <input type="text" class="form-control" asp-for="FirstName" id="Name">
            </div>
            <div class="form-group">
                <label for="Surname">Soyadınız</label>
                <input type="text" class="form-control" asp-for="LastName" id="Surname">
            </div>

            <div class="form-group">
                <label for="Username">Kullanıcı Adınız</label>
                <input type="text" class="form-control" asp-for="UserName" id="UserName">
            </div>

            <div class="form-group">
                <label for="Password">Mevcut Şifre</label>
                <input type="password" class="form-control" asp-for="Password" id="Password">
            </div>

            <div class="card-action">
                <button class="btn btn-outline-success">Bilgileri Güncelle</button>
            </div>

        </form>
    </div>
</div>
